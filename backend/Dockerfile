FROM openjdk:17
ARG JAR_FILE=build/libs/*.jar
ENV MYSQL_HOST=$MYSQL_HOST
ENV MYSQL_USERNAME=$MYSQL_USERNAME
ENV MYSQL_PASSWORD=$MYSQL_PASSWORD
COPY ${JAR_FILE} app.jar
ENTRYPOINT ["java","-jar","/app.jar","--MYSQL_HOST=${MYSQL_HOST}","--MYSQL_USERNAME=${MYSQL_USERNAME}","--MYSQL_PASSWORD=${MYSQL_PASSWORD}","--DEEPL_APIKEY=${DEEPL_APIKEY}","--OCI_BUCKET_NAME=${OCI_BUCKET_NAME}","--OCI_BUCKET_NAME_SPACE=${OCI_BUCKET_NAME_SPACE}","--OCI_REGION_URL=${OCI_REGION_URL}"]